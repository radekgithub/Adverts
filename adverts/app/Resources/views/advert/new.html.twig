{% extends 'base.html.twig' %}

{% block body %}

    <h3>Create New Ad</h3>

    {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.expiryDate) }}
        {{ form_row(form.category) }}
        {# render each row and field in the embedded form, in this example it's rendering the photo fiels as rows #}
        <div id="photo_list" data-prototype="{{ form_widget(form.photos.vars.prototype)|e('html_attr') }}">
            {% for row in form.photos %}
                <div class="well">
                    <span class="image-wrapper">
                        <strong>{{ row.vars.value.name }}</strong>
                    </span>
                    <span class="defaultUploadBtn">
                        {{ form_row(row) }}
                    </span>
                </div>
            {% endfor %}
        </div>
        <div class="top">
            <a class="btn btn-warning" href="{{ path('advert_my_ads') }}">
                <i class="fa fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
        </div>
    {{ form_end(form) }}

{% endblock %}