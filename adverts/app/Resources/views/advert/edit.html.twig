{% extends 'base.html.twig' %}

{% block body %}
    <h3>Edit Advert</h3>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.expiryDate) }}
    {{ form_row(form.category) }}

    <div id="photo_list" data-prototype="{{ form_widget(form.photos.vars.prototype)|e('html_attr') }}">
        {% for row in form.photos %}
            <div class="well">
                <span class="image-wrapper">
                    <img class="fancybox img-thumbnail" src="{{ asset('uploads/images/' ~ row.vars.value.name) }}" width="150" height="150">
                </span>
                <span class="default-button" style="display: none"><!-- hide html default file selection button -->
                    {{ form_row(row) }}
                </span>
            </div>
        {% endfor %}
    </div>
    <div class="top">
        <a class="btn btn-warning" href="{{ path('advert_show', { 'id': advert.id }) }}">
            <i class="fa fa-times"></i> Cancel
        </a>
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
    </div>
    {{ form_end(form) }}

{% endblock %}
